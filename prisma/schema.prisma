generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==========================================================
// 1. CORE MASTER DATA
// ==========================================================

model Curriculum {
  id        Int      @id @default(autoincrement())
  name      String
  chairId   String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  chair     User?    @relation("CurriculumChair", fields: [chairId], references: [id])
  programs  Program[]
  staffs    User[]   @relation("CurriculumStaff")

  @@map("curriculum_master")
}

model User {
  id             String    @id @default(cuid())
  email          String?   @unique
  name           String?
  emailVerified  DateTime?
  image          String?
  title          String?
  firstName      String?
  lastName       String?
  academicRank   String?
  workStatus     String?
  department     String?
  curriculum     String?
  adminTitle     String?
  
  role           Role      @default(USER)
  userType       UserType  @default(ACADEMIC)
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  curriculumId   Int?
  
  accounts       Account[]
  sessions       Session[]
  
  managedCurriculum Curriculum? @relation("CurriculumChair")
  managedPrograms   Program[]   @relation("ProgramChair")
  
  responsibleSubjects Subject[]            @relation("SubjectResponsible")
  teachingAssignments TeachingAssignment[]
  
  deanApprovals      TeachingAssignment[] @relation("DeanApprovals")
  chairApprovals     TeachingAssignment[] @relation("ChairApprovals")
  
  curriculumRef      Curriculum?          @relation("CurriculumStaff", fields: [curriculumId], references: [id])

  @@index([curriculumId], map: "user_curriculumId_fkey")
  @@map("user") 
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  ext_expires_in    Int?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "account_userId_fkey")
  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "session_userId_fkey")
  @@map("session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtoken")
}

// ==========================================================
// 2. ACADEMIC STRUCTURE
// ==========================================================

model Program {
  id             Int         @id @default(autoincrement())
  name_th        String
  degree_level   String
  year           Int
  programChairId String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  
  curriculumId   Int?
  curriculumRef  Curriculum? @relation(fields: [curriculumId], references: [id])
  programChair   User?       @relation("ProgramChair", fields: [programChairId], references: [id])
  
  subjects       Subject[]

  @@index([curriculumId], map: "program_curriculumId_fkey")
  @@index([programChairId], map: "program_programChairId_fkey")
  @@map("program")
}

model Subject {
  id                Int      @id @default(autoincrement())
  code              String
  name_th           String
  name_en           String?
  credit            String
  instructor        String?  @db.Text
  program_full_name String?
  
  programId         Int
  responsibleUserId String?
  
  program           Program  @relation(fields: [programId], references: [id])
  responsibleUser   User?    @relation("SubjectResponsible", fields: [responsibleUserId], references: [id])
  
  teachingAssignments TeachingAssignment[]
  courseOfferings     CourseOffering[] 

  @@unique([code, programId])
  @@index([programId], map: "subject_programId_fkey")
  @@index([responsibleUserId], map: "subject_responsibleUserId_fkey")
  @@map("subject")
}

// ==========================================================
// 3. WORKLOAD & APPROVAL FLOW
// ==========================================================

model TeachingAssignment {
  id                  Int             @id @default(autoincrement())
  academicYear        Int
  semester            Int
  section             String?
  
  lectureHours        Float           @default(0)
  labHours            Float           @default(0)
  examHours           Float           @default(0)
  examCritiqueHours   Float           @default(0)

  lecturerStatus      ApprovalStatus?
  lecturerFeedback    String?         @db.Text
  lecturerActionAt    DateTime?
  
  responsibleStatus   ApprovalStatus  @default(PENDING)
  responsibleActionAt DateTime?
  
  headApprovalStatus  ApprovalStatus  @default(PENDING)
  headApprovedAt      DateTime?
  headApproverId      String?
  
  deanApprovalStatus  ApprovalStatus  @default(PENDING)
  deanApprovedAt      DateTime?
  deanApproverId      String?
  
  lecturerId          String
  subjectId           Int
  
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  
  deanApprover        User?           @relation("DeanApprovals", fields: [deanApproverId], references: [id])
  headApprover        User?           @relation("ChairApprovals", fields: [headApproverId], references: [id])
  lecturer            User            @relation(fields: [lecturerId], references: [id], onDelete: Cascade)
  subject             Subject         @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@index([lecturerId, academicYear, semester])
  @@index([deanApproverId], map: "teachingassignment_deanApproverId_fkey")
  @@index([headApproverId], map: "teachingassignment_headApproverId_fkey")
  @@index([subjectId], map: "teachingassignment_subjectId_fkey")
  @@map("teachingassignment")
}

// ==========================================================
// 4. SYSTEM CONFIGURATION
// ==========================================================

model AcademicYear {
  id           Int      @id
  isActive     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  terms        TermConfiguration[]

  @@map("academic_year_master")
}

model TermConfiguration {
  id           String   @id @default(cuid())
  academicYear Int
  semester     Int
  // isActive removed; timeline dates determine current status

  step1Start   DateTime?
  step1End     DateTime?
  step2Start   DateTime?
  step2End     DateTime?
  step3Start   DateTime?
  step3End     DateTime?
  step4Start   DateTime?
  step4End     DateTime?

  yearRef      AcademicYear @relation(fields: [academicYear], references: [id], onDelete: Cascade)
  courseOfferings CourseOffering[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([academicYear, semester])
  @@map("term_configuration")
}

model CourseOffering {
  id           String            @id @default(cuid())
  termConfigId String
  subjectId    Int
  isOpen       Boolean           @default(true)

  termConfig   TermConfiguration @relation(fields: [termConfigId], references: [id], onDelete: Cascade)
  subject      Subject           @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([termConfigId, subjectId])
  @@map("course_offering")
}

// ==========================================================
// 5. ENUMS
// ==========================================================

enum Role {
  ADMIN
  LECTURER
  PROGRAM_CHAIR
  VICE_DEAN
  USER
}

enum UserType {
  ACADEMIC
  SUPPORT
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  DRAFT
}